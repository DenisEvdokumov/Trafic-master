<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.professor.traficinspiration">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.NewOrders" />
        <activity android:name=".activity.ActiveOrders" />
        <activity android:name=".activity.OrderDetails" />
        <activity android:name=".activity.WebViewActivity" />
        <activity android:name=".activity.MoneyActivity" />
        <activity android:name=".activity.ReferralsActivity" />
        <activity
            android:name=".activity.SignInActivity"
            android:launchMode="singleTask">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity android:name=".activity.UserInfoActivity" />
        <activity android:name=".activity.OrdersHistory" />
        <activity android:name=".activity.RegistrationActivity" />
        <activity android:name=".activity.PaymentSystemsActivity" />
        <activity android:name=".activity.SupportActivity" />

        <receiver
            android:name=".service.NotificationReceiver"
            android:process=":remote" />

        <activity android:name=".activity.WithdrawHistoryActivity" />
        <activity android:name=".activity.HelpActivity" />
        <activity android:name=".activity.NewsActivity" />
        <activity android:name=".activity.NetworkActivity" />

        <service
            android:name=".activity.NotificationService"
            android:enabled="true"

            android:exported="true"></service>

        <receiver
            android:name=".activity.MyReceiver"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED"
            android:enabled="true">

            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.REBOOT"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </receiver>

    </application>

</manifest>