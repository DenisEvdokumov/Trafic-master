<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.professor.traficinspiration.activity.MoneyActivity">

    <include layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dip"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_balance"
                android:background="@drawable/yellow_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Баланс"
                android:textSize="@dimen/button_text_size"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/balance_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="40dp" />

        </LinearLayout>






        <!--<TextView-->
            <!--android:id="@+id/lbl_transfer_type"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="30dip"-->
            <!--android:gravity="center"-->
            <!--android:text="transfer type"-->
            <!--android:textColor="#000000" />-->


        <!--<Spinner-->
            <!--android:id="@+id/spinner_transfer_type"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
        <!--</Spinner>-->


        <TextView
            android:id="@+id/lbl_transfer_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:gravity="center"
            android:text="Номер счета для вывода средств"
            android:textSize="18sp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_transfer_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:hint="Номер счета"
            android:inputType="number"
            android:maxLines="1" />

        <TextView
            android:id="@+id/lbl_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:gravity="center"
            android:text="Сумма, которую нужно перевести"
            android:textSize="18sp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_transfer_amount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:hint="Сумма"
            android:inputType="number"
            android:maxLines="1" />


        <Button
            android:id="@+id/transferButton"
            android:background="@drawable/green_button"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dip"
            android:text="Перевести"
            android:textSize="@dimen/button_text_size"/>

    </LinearLayout>

</LinearLayout>
